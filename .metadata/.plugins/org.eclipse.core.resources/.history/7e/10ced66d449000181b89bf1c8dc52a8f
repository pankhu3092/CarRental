package model;

import java.util.Map;

import com.fasterxml.jackson.annotation.JsonIgnoreProperties;
import com.fasterxml.jackson.annotation.JsonProperty;

@JsonIgnoreProperties(ignoreUnknown = true)
public class Car {

	private String make;
	private String model;
	private String vin;
	private String Color;
	private String Notes;
	private float Price;
	private float Discount;
	private Metrics metrics;
	
	
	public Car() {
		
	}
	
	public Car(String make, String model, String vin, String color, String notes, float price, float discount,
			Metrics metrics) {
		this.make = make;
		this.model = model;
		this.vin = vin;
		Color = color;
		Notes = notes;
		Price = price;
		Discount = discount;
		this.metrics = metrics;
	}

	public String getMake() {
		return make;
	}
	public void setMake(String make) {
		this.make = make;
	}
	public String getModel() {
		return model;
	}
	public void setModel(String model) {
		this.model = model;
	}
	public String getVin() {
		return vin;
	}
	public void setVin(String vin) {
		this.vin = vin;
	}
	
	public String getColor() {
		return Color;
	}
	public void setColor(String color) {
		Color = color;
	}
	public String getNotes() {
		return Notes;
	}
	public void setNotes(String notes) {
		Notes = notes;
	}
	
	public float getPrice() {
		return Price;
	}
	public void setPrice(float price) {
		Price = price;
	}
	public float getDiscount() {
		return Discount;
	}
	public void setDiscount(float discount) {
		Discount = discount;
	}
	public Metrics getMetrics() {
		return metrics;
	}
	public void setMetrics(Metrics metrics) {
		this.metrics = metrics;
	}
	
	
	@Override
	public String toString() {
		return "Car [make=" + make + ", model=" + model + ", vin=" + vin + ", Color=" + Color + ", Notes=" + Notes
				+ ", Price=" + Price + ", Discount=" + Discount + ", metrics=" + metrics + "]";
	}

	@JsonProperty("metadata")
    private void unpackNested(Map<String,String> metadata) {
        this.Color = (String)metadata.get("Color");
       this.Notes=(String)metadata.get("Notes");
    }
	
	@JsonProperty("perdayrent")
    private void unpackNestedPerDayRent(Map<String,Float> perdayrent) {
        this.Price = (float)perdayrent.get("Price");
       this.Discount=(float)perdayrent.get("Discount");
    }
	
	
	
	
}
